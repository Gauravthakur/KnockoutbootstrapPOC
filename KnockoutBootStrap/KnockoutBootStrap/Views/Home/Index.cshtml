@{
    ViewBag.Title = "Inventory List";
}
<script src="@Url.Content("~/Scripts/knockout-2.1.0.debug.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/knockout-2.1.0.js")" type="text/javascript"></script>
<script type="text/javascript">
   
</script>
<div class="container">
    <div class="hero-unit">
        <h2>
            Inventory Control List</h2>
    </div>
    <!-- Example row of columns -->
    <div class="row">
        <input type="hidden" id="UpdateCase" />
        <input type="hidden" id="InventoryId" />
        <div class="span6">
            <div style="height: 30px; width: 400px">
                <div class="alert alert-success fade in">
                </div>
            </div>
            <a class="btn btn-primary btn-small" id="add" style="float: right;" onclick="showhide();">
                Add</a>
            <br />
            <br />
            <table id="customerList" class="table table-hover table-bordered">
                <tr>
                    <th align="left">
                        Item Name
                    </th>
                    <th align="left">
                        Reorder Point
                    </th>
                    <th align="left">
                        Manage
                    </th>
                </tr>
                <tbody data-bind="foreach: Inventory">
                    <tr>
                        <td data-bind="text: ItemName">
                        </td>
                        <td data-bind="text: ReorderPoint">
                        </td>
                        <td colspan="2">
                            <a href="javascript:void(0);" class="edit" data-bind="attr:{id: Id}" onclick="Updatedata(this);">
                                <i class="icon-pencil"></i></a><a href="javascript:void(0);" onclick="Delete(this);"
                                    class="remove" data-bind="attr: {id: Id}" data-toggle="modal"><i class="icon-remove">
                                    </i></a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="span6">
            <div id="customerEdit" style="display: none;">
                <input type="hidden" name="id" id="hiddenid" />
                <div class="control-group">
                    <label class="control-label" style="font-weight: bold;" for="inputItemName">
                        Item Name:</label>
                    <div class="controls">
                        <input type="text" id="txtItemName" placeholder="Item Name" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" style="font-weight: bold;" for="inputReorderPoint">
                        Numeric Reorder:</label>
                    <div class="controls">
                        <input type="text" id="txtReorderPoint" placeholder="Please Enter Numeric Reorder Point" />
                    </div>
                </div>
                <a class="btn btn-primary btn-large" id="btnsave" data-bind="event: {click:Create}">
                    Save</a> <a class="btn btn-primary btn-large" id="btncancle" style="margin-left: 10px;">
                        Cancel</a>
            </div>
        </div>
    </div>
</div>
<script src="@Url.Content("~/scripts/InventoryControlKnockout.js")" type="text/javascript"> </script>
